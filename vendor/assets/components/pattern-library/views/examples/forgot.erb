<div id="modal--auth-login" class="modal" style="display: block">
  <div class="modal-content login">
<div class="row callout">
  <h2 class="js-auth-heading">Forgot your password?</h2>
  <p>We'll send you a link to reset it.</p>
</div>
<form id="auth-form" action="https://localhost:8889/forgot">
  <div class="row">
    <div class="column span_12">
      <label for="username">
        <div class="innerLabel">
          <div class="label">Email</div>
          <div class="message"></div>
        </div>
      </label>
      <input id="username" type="text" name="username" placeholder="your_email@example.com">
    </div>
  </div>

  <div class="row callout">
    <input type="submit" class="js-submit-link btn primary medium" value="Reset My Password">
  </div>
</form>
